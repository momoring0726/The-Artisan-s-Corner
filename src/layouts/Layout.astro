---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "The Artisan's Corner - Handmade Marketplace" } =
  Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | The Artisan's Corner</title>
  </head>
  <body class="bg-gray-50 text-gray-900 flex flex-col min-h-screen">
    <Navbar />
    <main class="flex-grow container mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="bg-white border-t border-gray-200 mt-auto">
      <div
        class="container mx-auto px-4 py-6 text-center text-gray-500 text-sm"
      >
        &copy; {new Date().getFullYear()} The Artisan's Corner. All rights reserved.
      </div>
    </footer>
  </body>
</html>
