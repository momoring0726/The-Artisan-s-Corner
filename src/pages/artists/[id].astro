---
import type { GetStaticPaths } from "astro";
import Layout from "../../layouts/Layout.astro";
import ProductCard from "../../components/ProductCard.astro";
import type { Artist } from "../../types";

export const getStaticPaths = (() => {
  return [{ params: { id: "jane-doe" } }];
}) satisfies GetStaticPaths;

const artist: Artist = {
  id: "jane-doe",
  name: "Jane Doe",
  location: "Portland, OR",
  bio: "I am a ceramic artist inspired by the misty forests of the Pacific Northwest...",
  image: "https://placehold.co/200x200/3b82f6/ffffff?text=JD",
  products: [
    {
      id: "1",
      title: "Hand-thrown Ceramic Mug",
      price: 28.0,
      image: "https://placehold.co/400x400/e2e8f0/475569?text=Ceramic+Mug",
      artist: "Jane Doe",
      category: "Pottery",
    },
    {
      id: "4",
      title: "Silver Fern Ring",
      price: 45.0,
      image: "https://placehold.co/400x400/e2e8f0/475569?text=Silver+Ring",
      artist: "Jane Doe",
      category: "Jewelry",
    },
    {
      id: "6",
      title: "Minimalist Vase",
      price: 32.0,
      image: "https://placehold.co/400x400/e2e8f0/475569?text=Vase",
      artist: "Jane Doe",
      category: "Pottery",
    },
  ],
};
---

<Layout title={artist.name}>
  <div class="bg-white rounded-xl shadow-sm p-8 mb-12 border border-gray-100">
    <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
      <img
        src={artist.image}
        alt={artist.name}
        class="w-32 h-32 rounded-full object-cover border-4 border-gray-50 shadow-sm"
      />
      <div class="text-center md:text-left">
        <h1 class="text-3xl font-serif font-bold text-gray-900 mb-2">
          {artist.name}
        </h1>
        <p
          class="text-sm text-gray-500 mb-4 flex items-center justify-center md:justify-start gap-1"
        >
          {artist.location}
        </p>
        <p class="text-gray-700 max-w-2xl">{artist.bio}</p>
      </div>
    </div>
  </div>

  <h2 class="text-2xl font-bold text-gray-900 mb-6">More from {artist.name}</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    {artist.products.map((product) => <ProductCard {...product} />)}
  </div>
</Layout>
