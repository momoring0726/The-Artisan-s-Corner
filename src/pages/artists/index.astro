import type { Artist } from "../../types";

// Mock Data for Artists
const artists: Artist[] = [
  {
    id: "jane-doe",
    name: "Jane Doe",
    location: "Portland, OR",
    bio: "Ceramic artist inspired by the misty forests of the Pacific Northwest. Specializing in functional stoneware.",
    image: "https://placehold.co/200x200/3b82f6/ffffff?text=JD",
    products: [], // Products aren't needed for the card view
  },
  {
    id: "john-smith",
    name: "John Smith",
    location: "Austin, TX",
