---
import Layout from "../../layouts/Layout.astro";
import type { Product } from "../../types";

// Mock Data: Products belonging to the logged-in artist
const myProducts: Product[] = [
  {
    id: "1",
    title: "Hand-thrown Ceramic Mug",
    price: 28.0,
    image: "https://placehold.co/100x100/e2e8f0/475569?text=Mug",
    artist: "Jane Doe",
    category: "Pottery",
    inventory: 5,
  },
  {
    id: "4",
    title: "Silver Fern Ring",
    price: 45.0,
    image: "https://placehold.co/100x100/e2e8f0/475569?text=Ring",
    artist: "Jane Doe",
    category: "Jewelry",
    inventory: 0, // Out of stock example
  },
];
---

<Layout title="Artist Dashboard">
  <div class="max-w-6xl mx-auto">
    <div
      class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4"
    >
      <div>
        <h1 class="text-3xl font-serif font-bold text-gray-900">Dashboard</h1>
        <p class="text-gray-600 mt-1">
          Manage your inventory and account settings.
        </p>
      </div>
      <div class="flex gap-3">
        <a
          href="/dashboard/profile"
          class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
        >
          Edit Profile
        </a>
        <a
          href="/dashboard/add-product"
          class="px-4 py-2 text-sm font-medium text-white bg-amber-700 rounded-lg hover:bg-amber-800 shadow-sm transition-colors"
        >
          + Add New Product
        </a>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-8">
      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
        <p class="text-sm text-gray-500 font-medium">Total Sales</p>
        <p class="text-2xl font-bold text-gray-900 mt-1">$1,240.00</p>
      </div>
      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
        <p class="text-sm text-gray-500 font-medium">Active Listings</p>
        <p class="text-2xl font-bold text-gray-900 mt-1">{myProducts.length}</p>
      </div>
      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
        <p class="text-sm text-gray-500 font-medium">Orders Pending</p>
        <p class="text-2xl font-bold text-amber-600 mt-1">3</p>
      </div>
    </div>

    <div
      class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden"
    >
      <div class="overflow-x-auto">
        <table class="w-full text-left text-sm text-gray-600">
          <thead
            class="bg-gray-50 text-gray-900 font-medium border-b border-gray-200"
          >
            <tr>
              <th class="px-6 py-4">Product</th>
              <th class="px-6 py-4">Category</th>
              <th class="px-6 py-4">Price</th>
              <th class="px-6 py-4">Inventory</th>
              <th class="px-6 py-4 text-right">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            {
              myProducts.map((product) => (
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-4">
                      <img
                        src={product.image}
                        alt={product.title}
                        class="w-12 h-12 rounded object-cover bg-gray-100"
                      />
                      <span class="font-medium text-gray-900">
                        {product.title}
                      </span>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <span class="px-2 py-1 text-xs font-medium bg-gray-100 rounded-full text-gray-600">
                      {product.category}
                    </span>
                  </td>
                  <td class="px-6 py-4 font-medium">
                    ${product.price.toFixed(2)}
                  </td>
                  <td class="px-6 py-4">
                    {product.inventory === 0 ? (
                      <span class="text-red-600 font-medium bg-red-50 px-2 py-1 rounded-full text-xs">
                        Out of Stock
                      </span>
                    ) : (
                      <span>{product.inventory} available</span>
                    )}
                  </td>
                  <td class="px-6 py-4 text-right">
                    <div class="flex justify-end gap-3">
                      <a
                        href={`/dashboard/edit/${product.id}`}
                        class="text-amber-600 hover:text-amber-800 font-medium"
                      >
                        Edit
                      </a>
                      <button class="text-red-600 hover:text-red-800">
                        Delete
                      </button>
                    </div>
                  </td>
                </tr>
              ))
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</Layout>
