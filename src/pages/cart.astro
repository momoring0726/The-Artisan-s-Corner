---
import Layout from "../layouts/Layout.astro";
import type { CartItem } from "../types";

// Mock Cart Data
const cartItems: CartItem[] = [
  {
    id: "1",
    title: "Hand-thrown Ceramic Mug",
    price: 28.0,
    quantity: 1,
    image: "https://placehold.co/100x100/e2e8f0/475569?text=Mug",
    artist: "Jane Doe",
    category: "Pottery",
  },
];

const subtotal: number = cartItems.reduce(
  (sum, item) => sum + item.price * item.quantity,
  0
);
const shipping: number = 5.0;
const total: number = subtotal + shipping;
---

<Layout title="Your Shopping Cart">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-serif font-bold text-gray-900 mb-8">
      Shopping Cart
    </h1>

    <div class="flex flex-col lg:flex-row gap-8">
      <div
        class="flex-1 bg-white rounded-xl shadow-sm overflow-hidden border border-gray-100"
      >
        <ul class="divide-y divide-gray-100">
          {
            cartItems.map((item) => (
              <li class="p-6 flex gap-4">
                <img
                  src={item.image}
                  alt={item.title}
                  class="w-24 h-24 rounded-md object-cover bg-gray-100"
                />
                <div class="flex-1 flex justify-between">
                  <div>
                    <h3 class="font-bold text-gray-900">{item.title}</h3>
                    <p class="text-sm text-gray-500">Artist: {item.artist}</p>
                    <p class="text-sm text-gray-500 mt-1">
                      Qty: {item.quantity}
                    </p>
                  </div>
                  <div class="text-right">
                    <p class="font-bold text-gray-900">
                      ${item.price.toFixed(2)}
                    </p>
                    <button class="text-sm text-red-600 hover:text-red-800 mt-2 underline">
                      Remove
                    </button>
                  </div>
                </div>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="w-full lg:w-80">
        <div
          class="bg-white rounded-xl shadow-sm p-6 border border-gray-100 sticky top-24"
        >
          <h2 class="font-bold text-gray-900 mb-4 text-lg">Order Summary</h2>
          <div class="space-y-3 mb-6">
            <div class="flex justify-between text-gray-600">
              <span>Subtotal</span>
              <span>${subtotal.toFixed(2)}</span>
            </div>
            <div class="flex justify-between text-gray-600">
              <span>Shipping</span>
              <span>${shipping.toFixed(2)}</span>
            </div>
            <div
              class="border-t border-gray-100 pt-3 flex justify-between font-bold text-gray-900 text-lg"
            >
              <span>Total</span>
              <span>${total.toFixed(2)}</span>
            </div>
          </div>
          <button
            class="w-full bg-amber-700 hover:bg-amber-800 text-white font-bold py-3 rounded-lg shadow-sm transition-colors"
          >
            Proceed to Checkout
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>
