---
import Layout from "../layouts/Layout.astro";

// In a real app, we would pull the cart total from a store or URL param
const mockTotal = 33.0;
---

<Layout title="Checkout">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-3xl font-serif font-bold text-gray-900 mb-8">Checkout</h1>

    <div class="flex flex-col lg:flex-row gap-8">
      <div
        class="flex-1 bg-white rounded-xl shadow-sm p-8 border border-gray-100"
      >
        <form class="space-y-8">
          <div>
            <h2 class="text-xl font-bold text-gray-900 mb-4">
              Shipping Information
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1"
                  >First Name</label
                >
                <input
                  type="text"
                  class="w-full border border-gray-300 rounded-lg px-3 py-2"
                  required
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1"
                  >Last Name</label
                >
                <input
                  type="text"
                  class="w-full border border-gray-300 rounded-lg px-3 py-2"
                  required
                />
              </div>
              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1"
                  >Address</label
                >
                <input
                  type="text"
                  class="w-full border border-gray-300 rounded-lg px-3 py-2"
                  required
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1"
                  >City</label
                >
                <input
                  type="text"
                  class="w-full border border-gray-300 rounded-lg px-3 py-2"
                  required
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1"
                  >Zip Code</label
                >
                <input
                  type="text"
                  class="w-full border border-gray-300 rounded-lg px-3 py-2"
                  required
                />
              </div>
            </div>
          </div>

          <div class="pt-6 border-t border-gray-100">
            <h2 class="text-xl font-bold text-gray-900 mb-4">
              Payment Details
            </h2>
            <div class="space-y-4">
              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1"
                  >Card Number</label
                >
                <input
                  type="text"
                  placeholder="0000 0000 0000 0000"
                  class="w-full border border-gray-300 rounded-lg px-3 py-2"
                  required
                />
              </div>
              <div class="grid grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1"
                    >Expiration</label
                  >
                  <input
                    type="text"
                    placeholder="MM/YY"
                    class="w-full border border-gray-300 rounded-lg px-3 py-2"
                    required
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1"
                    >CVC</label
                  >
                  <input
                    type="text"
                    placeholder="123"
                    class="w-full border border-gray-300 rounded-lg px-3 py-2"
                    required
                  />
                </div>
              </div>
            </div>
          </div>

          <button
            type="submit"
            class="w-full bg-amber-700 text-white font-bold py-3 rounded-lg hover:bg-amber-800 transition-colors shadow-sm mt-4"
          >
            Pay ${mockTotal.toFixed(2)}
          </button>
        </form>
      </div>

      <div class="w-full lg:w-80">
        <div
          class="bg-gray-50 rounded-xl p-6 border border-gray-200 sticky top-24"
        >
          <h3 class="font-bold text-gray-900 mb-4">Your Order</h3>
          <div class="space-y-3 text-sm border-b border-gray-200 pb-4 mb-4">
            <div class="flex justify-between">
              <span>Hand-thrown Ceramic Mug (x1)</span>
              <span class="font-medium">$28.00</span>
            </div>
          </div>
          <div class="flex justify-between font-bold text-lg text-gray-900">
            <span>Total</span>
            <span>${mockTotal.toFixed(2)}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
