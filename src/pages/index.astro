  },
  {
    id: "2",
    title: "Abstract Oil Painting",
    price: 150.0,
    image: "https://placehold.co/400x400/e2e8f0/475569?text=Oil+Painting",
    artist: "John Smith",
    category: "Art",
  },
  {
    id: "3",
    title: "Woven Wool Tapestry",
    price: 85.0,
    image: "https://placehold.co/400x400/e2e8f0/475569?text=Tapestry",
    artist: "Sarah Connor",
    category: "Decor",
  },
  {
    id: "4",
    title: "Silver Fern Ring",
    price: 45.0,
    image: "https://placehold.co/400x400/e2e8f0/475569?text=Silver+Ring",
    artist: "Jane Doe",
    category: "Jewelry",
  },
  {
    id: "5",
    title: "Oak Cutting Board",
    price: 60.0,
    image: "https://placehold.co/400x400/e2e8f0/475569?text=Cutting+Board",
    artist: "Mike Ross",
    category: "Woodwork",
  },
  {
    id: "6",
