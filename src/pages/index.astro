    image: "https://placehold.co/400x400/e2e8f0/475569?text=Vase",
    artist: "Jane Doe",
    category: "Pottery",
  },
];

const categories: ProductCategory[] = [
  "All",
  "Pottery",
  "Jewelry",
  "Art",
  "Decor",
  "Woodwork",
];
---

<Layout title="Catalog">
  <div class="text-center max-w-2xl mx-auto mb-12">
    <h1 class="text-4xl md:text-5xl font-serif font-bold text-gray-900 mb-4">
      Curated Handmade Goods
    </h1>
    <p class="text-lg text-gray-600">
      Discover unique items crafted with passion by independent artists.
    </p>
  </div>

  <div class="flex flex-col md:flex-row gap-8">
    <aside class="w-full md:w-64 flex-shrink-0">
      <div class="sticky top-24">
        <h3 class="font-bold text-gray-900 mb-4">Categories</h3>
        <ul class="space-y-2">
          {
            categories.map((cat) => (
              <li>
                <a
                  href="#"
                  class="text-gray-600 hover:text-amber-700 block py-1"
                >
                  {cat}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </aside>

    <div class="flex-1">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {products.map((product) => <ProductCard {...product} />)}
      </div>
    </div>
  </div>
</Layout>
